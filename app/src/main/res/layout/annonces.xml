<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="256dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="336dp"
                android:layout_height="248dp"
                android:background="@drawable/borderannonces"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/descrip"
                    android:layout_width="207dp"
                    android:layout_height="23dp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Hotel Marrakech 5 etoile a cote ..."
                    android:textColor="#9CFF9800"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.05"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img1"
                    app:layout_constraintVertical_bias="0.114"
                    android:ellipsize="end"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:text="200,00 DH"
                    android:textAlignment="center"
                    android:textColor="#FF9800"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img1"
                    app:layout_constraintVertical_bias="0.515" />

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="338dp"
                    android:layout_height="162dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/btnfeedborder"
                    android:cropToPadding="false"
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/graybg"
                    tools:layout_editor_absoluteX="1dp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="21dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/descrip"
                    app:srcCompat="@drawable/localisation" />

                <TextView
                    android:id="@+id/city"
                    android:layout_width="158dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:text="Marrakech"
                    android:textColor="#C36B27"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    app:layout_constraintTop_toBottomOf="@+id/descrip"
                    android:ellipsize="end"
                    android:singleLine="true"/>

                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="19dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/star"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="19dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY"
                    app:layout_constraintStart_toEndOf="@+id/star1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/star"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="19dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY"
                    app:layout_constraintStart_toEndOf="@+id/star2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/star"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/star4"
                    android:layout_width="19dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY"
                    app:layout_constraintStart_toEndOf="@+id/star3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/star"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/star5"
                    android:layout_width="19dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY"
                    app:layout_constraintStart_toEndOf="@+id/star4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/star"
                    android:visibility="invisible"/>



                <ImageView
                    android:id="@+id/starGray1"
                    android:layout_width="19dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/stargray"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/starGray2"
                    android:layout_width="19dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY"
                    app:layout_constraintStart_toEndOf="@+id/star1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/stargray"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/starGray3"
                    android:layout_width="19dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY"
                    app:layout_constraintStart_toEndOf="@+id/star2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/stargray"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/starGray4"
                    android:layout_width="19dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY"
                    app:layout_constraintStart_toEndOf="@+id/star3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/stargray"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/starGray5"
                    android:layout_width="19dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY"
                    app:layout_constraintStart_toEndOf="@+id/star4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/stargray"
                    android:visibility="invisible"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
</RelativeLayout>